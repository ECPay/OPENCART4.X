{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <button type="submit" form="form-ecpayinvoice" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
                <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}

        <div class="card">
            <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }} </div>
            <div class="card-body">
                <form action="{{ save }}" method="post" data-oc-toggle="ajax" id="form-ecpayinvoice">
                    <!--Status-->
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="input-{{ id_prefix }}-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <div class="form-check form-switch form-switch-lg">
                                <input type="hidden" name="{{ name_prefix }}_status" value="0"/>
                                <input type="checkbox" name="{{ name_prefix }}_status" value="1" id="input-{{ id_prefix }}-status" class="form-check-input" {% if module_ecpayinvoice_status %} checked {% endif %}/>
                            </div>
                        </div>
                    </div>
                    <!--MID-->
                    <div class="row mb-3 required">
                        <label class="col-sm-2 col-form-label" for="input-{{ id_prefix }}-mid">{{ entry_mid }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="{{ name_prefix }}_mid" value="{{ module_ecpayinvoice_mid }}" placeholder="{{ entry_mid }}" id="input-{{ id_prefix }}-mid" class="form-control" />
                            <div id="error-{{ id_prefix }}-mid" class="invalid-feedback"></div>
                        </div>
                    </div>
                    <!--Hash Key-->
                    <div class="row mb-3 required">
                        <label class="col-sm-2 col-form-label" for="input-{{ id_prefix }}-hashkey">{{ entry_hashkey }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="{{ name_prefix }}_hashkey" value="{{ module_ecpayinvoice_hashkey }}" placeholder="{{ entry_hashkey }}" id="input-{{ id_prefix }}-hashkey" class="form-control" />
                            <div id="error-{{ id_prefix }}-hashkey" class="invalid-feedback"></div>
                        </div>
                    </div>
                    <!--Hash IV-->
                    <div class="row mb-3 required">
                        <label class="col-sm-2 col-form-label" for="input-{{ id_prefix }}-hashiv">{{ entry_hashiv }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="{{ name_prefix }}_hashiv" value="{{ module_ecpayinvoice_hashiv }}" placeholder="{{ entry_hashiv }}" id="input-{{ id_prefix }}-hashiv" class="form-control" />
                            <div id="error-{{ id_prefix }}-hashiv" class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="input-{{ id_prefix }}-test-mode" class="col-sm-2 col-form-label">{{ entry_test_mode }}</label>
						<div class="col-sm-8">
                            <small>{{ entry_test_mode_info }}</small>
							<div class="form-check form-switch form-switch-lg">
								<input type="hidden" name="{{ name_prefix }}_test_mode" value="0"/>
								<input type="checkbox" name="{{ name_prefix }}_test_mode" value="1" id="input-{{ id_prefix }}-test-mode" class="form-check-input" {% if module_ecpayinvoice_test_mode %} checked {% endif %}/>
							</div>
						</div>
                    </div>

                    <!--自動開立電子發票-->
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="input-{{ id_prefix }}-autoissue">{{ entry_autoissue }}</label>
                        <div class="col-sm-10">
                            <div class="form-check form-switch form-switch-lg">
                                <input type="hidden" name="{{ name_prefix }}_autoissue" value="0"/>
                                <input type="checkbox" name="{{ name_prefix }}_autoissue" value="1" id="input-{{ id_prefix }}-autoissue" class="form-check-input" {% if module_ecpayinvoice_autoissue %} checked {% endif %}/>
                            </div>
                            <div id="error-{{ id_prefix }}-autoissue" class="invalid-feedback"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}